{
  "name": "mini-social-media",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "prebuild": "npm --prefix client install --no-audit --no-fund",
    "dev:server": "nodemon server/src/index.js",
    "dev:client": "vite --config client/vite.config.js",
    "dev": "concurrently -k -n SERVER,CLIENT -c auto \"npm:dev:server\" \"npm:dev:client\"",
    "build:client": "vite build --config client/vite.config.js",
    "build": "npm --prefix client run build",
    "preview": "vite preview --config client/vite.config.js --port 5173",
    "start": "node server/src/index.js"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@upstash/redis": "^1.35.5",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-openid-connect": "^2.19.2",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.19.0",
    "mongoose": "^8.18.1",
    "multer": "^2.0.2",
    "streamifier": "^0.1.1",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "concurrently": "^9.2.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0"
  },
  "description": "This template provides a minimal setup to get React working in Vite with HMR and some ESLint rules.",
  "main": "eslint.config.js",
  "directories": {
    "doc": "docs"
  },
  "author": "",
  "license": "ISC"
}
